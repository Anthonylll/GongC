<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <!-- 左侧布局文件 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:padding="6dp" >

            <TextView
                android:id="@+id/tv_common_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通订单"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_account_CJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_common_bid"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="彩金消费22.00元"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_account_JE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_account_CJ"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="金额消费2.00元"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <!-- 新增字段 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.1"
            android:padding="6dp" >

            <TextView
                android:id="@+id/tv_account_JF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="用户积分兑换"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <!-- 右侧布局文件 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:padding="4dp" >

            <TextView
                android:id="@+id/tv_JCTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:text="竞彩篮球"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_JCTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_JCTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="2014-05-06 12:23:45"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/image_accountArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/my_center_right_arrow"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>