<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hall_bg_grey"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_top_select"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_toplayout_height"
        android:background="@color/main_red" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/common_toplayout_height"
            android:layout_height="@dimen/common_toplayout_height"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/main_red"
            android:text="忘记密码"
            android:textColor="@color/white"
            android:textSize="@dimen/common_lager_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_edit_height"
        android:layout_marginLeft="@dimen/common_margin_8"
        android:layout_marginRight="@dimen/common_margin_8"
        android:layout_marginTop="@dimen/common_margin_24"
        android:background="@drawable/et_bg"
        android:gravity="center_vertical" >

        <EditText
            android:id="@+id/forgetpassword_username"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:paddingLeft="@dimen/common_margin_16"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/login_edit_hint"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/common_big_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_edit_height"
        android:layout_marginLeft="@dimen/common_margin_8"
        android:layout_marginRight="@dimen/common_margin_8"
        android:layout_marginTop="@dimen/common_margin_16"
        android:gravity="center_vertical" >

        <EditText
            android:id="@+id/forgetpassword_checkma"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/et_bg"
            android:gravity="center_vertical"
            android:hint="请输入右侧验证码"
            android:paddingLeft="@dimen/common_margin_16"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/login_edit_hint"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/common_big_text_size" />

        <ImageView
            android:id="@+id/forgetpassword_checkma_show"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin_8"
            android:layout_weight="1"
            android:background="#C6C6C6"
            android:gravity="center" />
        
        <!-- #B18650 -->
    </LinearLayout>

    <Button
        android:id="@+id/forgetpassword_ok"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_button_height"
        android:layout_marginLeft="@dimen/common_margin_8"
        android:layout_marginRight="@dimen/common_margin_8"
        android:layout_marginTop="@dimen/common_margin_32"
        android:background="@drawable/follow_bg_red"
        android:gravity="center"
        android:text="验证账号"
        android:textColor="@color/white"
        android:textSize="@dimen/common_lage_text_size"
        android:textStyle="normal" />

</LinearLayout>