<?xml version="1.0" encoding="utf-8"?>
<!-- 账户信息 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_shade" >

    <RelativeLayout
        android:id="@+id/rl_passtype"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/select_middle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white" >

            <ListView
                android:id="@+id/lv_pop"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000"
                android:dividerHeight="0dip" />
        </RelativeLayout>

        <!-- android:layout_alignParentBottom="true" -->

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_middle"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1" >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/dialog_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="@dimen/common_lager_text_size" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/bet_btn_text"
                android:gravity="center"
                android:padding="10dp"
                android:text="确定"
                android:textColor="@color/black"
                android:textSize="@dimen/common_lager_text_size" />
        </LinearLayout>

