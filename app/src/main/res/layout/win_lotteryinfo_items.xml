<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/win_lottery_detail_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/win_lottery_expand_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_margin_16"
            android:background="@drawable/win_lottery_detail_down" />

        <RelativeLayout
            android:id="@+id/ll_ll_top"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/win_lottery_detail_titil_height"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/common_margin_4"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:layout_marginTop="@dimen/common_margin_4" >

            <TextView
                android:id="@+id/top_tv_qi"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="第43534"
                android:textColor="@color/black"
                android:textSize="@dimen/common_lage_text_size" />

            <TextView
                android:id="@+id/top_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/common_margin_16"
                android:layout_toRightOf="@id/top_tv_qi"
                android:gravity="center"
                android:text="djfjsdfjs"
                android:textColor="#848484"
                android:textSize="@dimen/common_small_text_size" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_ll_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_ll_top"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:layout_toLeftOf="@+id/img_x"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/bottom_tv_redNum"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:text="dsjfsl"
                android:textColor="@color/main_red_new"
                android:textSize="@dimen/common_lage_text_size" />

            <TextView
                android:id="@+id/bottom_tv_blueNum"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/blue"
                android:textSize="@dimen/common_lage_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lottery_ll_firsShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_ll_top"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lottery_ll_firsShow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lottery_ll_firsShow"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lottery_ll_k3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_ll_top"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_k3top"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:visibility="visible"
                android:background="@drawable/winlottery_k3"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/k3_img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                         />

                    <ImageView
                        android:id="@+id/k3_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        />

                    <ImageView
                        android:id="@+id/k3_img3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                         />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_k3common"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/k3_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/main_red_new"
                    android:textSize="@dimen/common_lage_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_hezhishow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="和值 :"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_hezhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="11"
                    android:textColor="@color/main_red_new"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>