<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_pink_bg"
    android:orientation="horizontal"
    android:weightSum="1" >

    <LinearLayout
        android:id="@+id/spf_right_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/right_top_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="0.9" >

            <TextView
                android:id="@+id/ll_tv_mainTeam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="bottom|right"
                android:text="东京"
                android:textColor="@color/black"
                android:textSize="@dimen/common_lage_text_size" />

            <TextView
                android:id="@+id/ll_tv_vs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_horizontal|bottom"
                android:text="VS"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_lage_text_size" />

            <TextView
                android:id="@+id/ll_tv_cusTeam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="bottom|left"
                android:text="上海"
                android:textColor="@color/black"
                android:textSize="@dimen/common_lage_text_size" />
        </LinearLayout>

        <!-- 胜平负 按钮点击区 -->

        <LinearLayout
            android:id="@+id/right_bottom_ll_spf"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/select_jc_rangqiu_layout_height"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="0.9" >

            <Button
                android:id="@+id/btn_mainWin3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:background="@drawable/select_sfc_lv_item_left"
                android:gravity="center"
                android:text="胜 3.23"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_small_text_size" />

            <Button
                android:id="@+id/btn_float1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:background="@drawable/select_sfc_lv_item_center"
                android:gravity="center"
                android:text="平 3.23"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_small_text_size" />

            <Button
                android:id="@+id/btn_lose0"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:background="@drawable/select_sfc_lv_item_right"
                android:gravity="center"
                android:text="负 3.23"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_small_text_size" />
        </LinearLayout>

        <!-- 8混合投注 -->

    </LinearLayout>

    

</LinearLayout>