<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/team_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="西部"
            android:textColor="@color/black"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/bet_white_middle_bg"
        android:orientation="horizontal" >

        <TextView
            style="@style/integral_title_text"
            android:textColor="@color/black"
            android:text="排名" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="球队"
            android:textColor="@color/black"
            android:textSize="@dimen/common_small_text_size" />

        <TextView
            style="@style/integral_title_text"
            android:textColor="@color/black"
            android:text="胜" />

        <TextView
            style="@style/integral_title_text"
            android:textColor="@color/black"
            android:text="负" />

        <TextView
            style="@style/integral_title_text_two"
            android:textColor="@color/black"
            android:text="胜率" />

        <TextView
            style="@style/integral_title_text_two"
            android:textColor="@color/black"
            android:text="连胜次数" />
    </LinearLayout>

    <com.gcapp.tc.view.MyListView2
        android:id="@+id/record_integral_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/integral_hint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="暂无数据"
        android:textColor="@color/gray"
        android:textSize="14dp"
        android:visibility="gone" />

</LinearLayout>