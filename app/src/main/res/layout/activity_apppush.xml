<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hall_bg_grey"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_toplayout_height"
        android:background="@color/main_red" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/common_toplayout_height"
            android:layout_height="@dimen/common_toplayout_height"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/main_red"
            android:text="推送管理"
            android:textColor="@color/white"
            android:textSize="@dimen/common_lager_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <!-- 开奖推送 -->

        <RelativeLayout
            android:id="@+id/setting_ll_kj"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height" >

            <TextView
                android:id="@+id/setting_tv_random"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/common_margin_8"
                android:gravity="center"
                android:text="开奖推送"
                android:textColor="@color/black"
                android:textSize="@dimen/common_lage_text_size" />

            <ImageButton
                android:id="@+id/setting_btn_kj"
                android:layout_width="@dimen/push_cb_size"
                android:layout_height="@dimen/push_cb_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:src="@drawable/login_activity_check_selector" />
        </RelativeLayout>

        <!-- 中奖推送 -->

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/hall_bg_grey2" />

        <RelativeLayout
            android:id="@+id/setting_ll_zj"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_item_height" >

            <TextView
                android:id="@+id/setting_tv_vibrator"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/common_margin_8"
                android:gravity="center"
                android:text="中奖推送"
                android:textColor="@color/black"
                android:textSize="@dimen/common_lage_text_size" />

            <ImageButton
                android:id="@+id/setting_btn_zj"
                android:layout_width="@dimen/push_cb_size"
                android:layout_height="@dimen/push_cb_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:src="@drawable/login_activity_check_selector" />
        </RelativeLayout>
    </LinearLayout>
