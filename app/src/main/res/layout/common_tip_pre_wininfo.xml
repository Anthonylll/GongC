<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_top_select"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_tip_select_wid"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_lotteryname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="双色球"
            android:textColor="@color/black"
            android:textSize="@dimen/common_lage_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="上期开奖"
            android:textColor="@color/black"
            android:textSize="@dimen/common_lage_text_size" />

        <TextView
            android:id="@+id/tv_selected_redball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/grey"
            android:textSize="@dimen/common_big_text_size" />

        <TextView
            android:id="@+id/tv_selected_blueball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/grey"
            android:textSize="@dimen/common_big_text_size"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lottery_ll_win"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_tip_select_wid"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" />

</LinearLayout>