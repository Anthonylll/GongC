<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/btn_showNum"
        android:layout_width="@dimen/icon_ball_size"
        android:layout_height="@dimen/icon_ball_size"
        android:background="@drawable/icon_ball_red_unselected"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_yilou"
        android:layout_width="@dimen/icon_forget_size"
        android:layout_height="@dimen/icon_forget_size"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/black"
        android:visibility="gone" />

</LinearLayout>