<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:background="@color/white" >
    
    <View
	    android:layout_width="match_parent"
	    android:layout_height="8dp"
	    android:background="@color/hall_bg_grey"
	    android:layout_alignParentTop="true" />
    
	<com.gcapp.tc.view.CircleImg
        android:id="@+id/programme_user_img"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/center_circle_imageview" />
	
	<TextView
	    android:id="@+id/programme_user_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/programme_user_img"
	    android:layout_marginLeft="5dp"
	    android:layout_marginTop="28dp"
	    android:textColor="@color/black"
	    android:textSize="@dimen/common_lager_text_size"
	    android:singleLine="true"
		android:maxEms="6"
		android:ellipsize="end"
	    android:text="张大毛" />
	
	<TextView
	    android:id="@+id/user_winning"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toLeftOf="@+id/programme_user_odds"
	    android:layout_marginTop="28dp"
	    android:textColor="@color/gray"
	    android:textSize="@dimen/common_lager_text_size"
	    android:singleLine="true"
		android:maxEms="6"
		android:ellipsize="end"
	    android:text="胜率：" />
	
	<TextView
	    android:id="@+id/programme_user_odds"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="28dp"
	    android:textColor="@color/main_red"
	    android:textSize="@dimen/common_lager_text_size"
	    android:singleLine="true"
		android:maxEms="6"
		android:ellipsize="end"
	    android:text="54.12%" />
	
	<TextView
	    android:id="@+id/programme_content"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/programme_user_img"
	    android:layout_marginLeft="10dp"
	    android:textColor="@color/black"
	    android:textSize="@dimen/common_lage_text_size"
	    android:ellipsize="end"  
        android:maxLines="2" 
	    android:text="SP3红单专家，十五年经验!红单专家，十五年经验!红单专家，十五年经验!红单专家，十五年经验!红单专家，十五年经验!红单专家，十五年经验!" />
    
	<LinearLayout
	    android:id="@+id/programme_layout"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_below="@+id/programme_content"
	    android:layout_marginTop="8dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:background="@drawable/programme_layout"
	    android:orientation="horizontal" >
	        
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:orientation="vertical" >
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal" >
	            
	            <TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:textColor="@color/gray"
	                android:layout_gravity="center_vertical"
	                android:gravity="center"
	                android:text="类型" />
	            
	            <TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:textColor="@color/gray"
	                android:layout_gravity="center_vertical"
	                android:gravity="center"
	                android:text="自购金额" />
	            
	            <TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:textColor="@color/gray"
	                android:layout_gravity="center_vertical"
	                android:gravity="center"
	                android:text="单倍金额" />
	            
	        </LinearLayout>
	            
	        <View
	        	android:layout_width="match_parent"
	        	android:layout_height="1dp"
	        	android:background="#E3E3E3"
	        	android:layout_centerInParent="true" />
	            
	       	<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal" >
	            
	       	    <TextView
	       	        android:id="@+id/lottery_name"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:textColor="@color/black"
	                android:layout_gravity="center_vertical"
	                android:gravity="center"
	                android:text="竞彩足球" />
	       	    
	       	    <TextView
	       	        android:id="@+id/total_money"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:textColor="@color/black"
	                android:layout_gravity="center_vertical"
	                android:gravity="center"
	                android:text="10000元" />
	       	    
	       	    <TextView
	       	        android:id="@+id/single_money"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:textColor="@color/black"
	                android:layout_gravity="center_vertical"
	                android:gravity="center"
	                android:text="2元" />
	       	    
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="1dp"
	        android:layout_height="match_parent"
	        android:background="#E3E3E3" />
	    
	    <RelativeLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:padding="10dp" >
	        
	        <Button
	            android:id="@+id/follow_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="30dp"
	            android:textColor="@color/white"
	            android:textSize="@dimen/common_lager_text_size"
	            android:background="@drawable/documentary_red_btn"
	            android:layout_centerInParent="true"
	            android:text="跟单" />
	        
	    </RelativeLayout>
	    
	</LinearLayout>
	
	<TextView
	    android:id="@+id/end_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/programme_layout"
	    android:layout_marginTop="10dp"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="10dp"
	    android:textColor="@color/gray"
	    android:textSize="@dimen/common_lager_text_size"
	    android:text="截止：03-21 09:34" />
	
</RelativeLayout>
