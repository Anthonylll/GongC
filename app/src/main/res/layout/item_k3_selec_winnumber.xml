<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_all_win"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/hall_bg_grey" />

        <TextView
            android:id="@+id/tv_qi"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="23333222期"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/hall_bg_grey" />

        <LinearLayout
            android:id="@+id/ll_winnumber"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_img1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/dice1"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/tv_img2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/dice1"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/tv_img3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/dice1"
                android:gravity="center"
                android:text="" />
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/hall_bg_grey" />

        <TextView
            android:id="@+id/tv_winnumber"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/hall_bg_grey" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="二 不同号"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/hall_bg_grey" />
    </LinearLayout>

</RelativeLayout>