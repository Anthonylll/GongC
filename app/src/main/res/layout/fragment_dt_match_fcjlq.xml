<?xml version="1.0" encoding="utf-8"?>
 <!-- 竞彩篮球的选球页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.gcapp.tc.wheel.widget.TabPageIndicator
        android:id="@+id/indicator_jclq"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/follow_tab_height"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/indicator_shade_jclq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/indicator_jclq"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/icon_shade" />

    <android.support.v4.view.ViewPager
        android:id="@+id/select_jclq_guoguan"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/indicator_shade_jclq" />

</RelativeLayout>