<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hall_bg_grey"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_toplayout_height"
        android:background="@color/main_red" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/common_toplayout_height"
            android:layout_height="@dimen/common_toplayout_height"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/main_red"
            android:text="银行卡信息"
            android:textColor="@color/white"
            android:textSize="@dimen/common_lager_text_size" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin_8"
                android:layout_marginRight="@dimen/common_margin_8"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="12dp"
                    android:background="@color/hall_bg_grey" />

                <LinearLayout
                    android:id="@+id/layout_yh"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/my_infromation_height"
                    android:layout_marginLeft="@dimen/common_margin_8"
                    android:layout_marginRight="@dimen/common_margin_8"
                    android:background="@drawable/et_bg"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/account_information_bank" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin_4"
                        android:text="银行名称"
                        android:textColor="#848484"
                        android:textSize="@dimen/common_big_text_size" />

                    <TextView
                        android:id="@+id/accInfo_tv_bankName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/common_margin_16"
                        android:hint="点击选择银行名称"
                        android:textColor="@color/black"
                        android:textColorHint="#c7c7c7"
                        android:textSize="@dimen/common_big_text_size" />

                    <LinearLayout
                        android:id="@+id/layout_bankname"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right|center_vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/img_account_arrow_down" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="12dp"
                    android:background="@color/hall_bg_grey" />

                <LinearLayout
                    android:id="@+id/layout_adress"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/my_infromation_height"
                    android:layout_marginLeft="@dimen/common_margin_8"
                    android:layout_marginRight="@dimen/common_margin_8"
                    android:background="@drawable/et_bg"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/account_information_address" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin_4"
                        android:text="开户地点"
                        android:textColor="#848484"
                        android:textSize="@dimen/common_big_text_size" />

                    <TextView
                        android:id="@+id/accInfo_tv_location2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin_16"
                        android:hint="点击选择开户地点"
                        android:textColor="@color/black"
                        android:textColorHint="#c7c7c7"
                        android:textSize="@dimen/common_big_text_size" />

                    <LinearLayout
                        android:id="@+id/layout_bankadress"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right|center_vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/img_account_arrow_down" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="12dp"
                    android:background="@color/hall_bg_grey" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/my_infromation_height"
                    android:layout_marginLeft="@dimen/common_margin_8"
                    android:layout_marginRight="@dimen/common_margin_8"
                    android:background="@drawable/et_bg"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/account_information_bank_branch" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin_4"
                        android:text="开户支行"
                        android:textColor="#848484"
                        android:textSize="@dimen/common_big_text_size" />

                    <EditText
                        android:id="@+id/accInfo_tv_fullName2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/common_margin_16"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="请输入开户支行"
                        android:textColor="@color/black"
                        android:textColorHint="#c7c7c7"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/common_big_text_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="12dp"
                    android:background="@color/hall_bg_grey" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/my_infromation_height"
                    android:layout_marginLeft="@dimen/common_margin_8"
                    android:layout_marginRight="@dimen/common_margin_8"
                    android:background="@drawable/et_bg"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/account_information_bank_num" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin_4"
                        android:text="银行卡号"
                        android:textColor="#848484"
                        android:textSize="@dimen/common_big_text_size" />

                    <EditText
                        android:id="@+id/accInfo_tv_bankNum2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/common_margin_16"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="请输入银行卡号"
                        android:textColor="@color/black"
                        android:textColorHint="#c7c7c7"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/common_big_text_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="12dp"
                    android:background="@color/hall_bg_grey" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/my_infromation_height"
                    android:layout_marginLeft="@dimen/common_margin_8"
                    android:layout_marginRight="@dimen/common_margin_8"
                    android:background="@drawable/et_bg"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/account_information_bank_num" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin_4"
                        android:text="支付宝"
                        android:textColor="#848484"
                        android:textSize="@dimen/common_big_text_size" />

                    <EditText
                        android:id="@+id/accInfo_tv_zfb"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/common_margin_16"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="请输入支付宝账号"
                        android:textColor="@color/black"
                        android:textColorHint="#c7c7c7"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/common_big_text_size" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/alter_btn"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/common_margin_8"
                android:layout_marginRight="@dimen/common_margin_8"
                android:layout_marginTop="@dimen/common_margin_16"
                android:background="@drawable/follow_bg_red"
                android:gravity="center"
                android:text="确认修改"
                android:textColor="@color/white"
                android:textSize="@dimen/common_lage_text_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>