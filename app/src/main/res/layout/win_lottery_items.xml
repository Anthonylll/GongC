<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f6f6f6"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/img_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_margin_16"
        android:src="@drawable/my_center_right_arrow" />

    <LinearLayout
        android:id="@+id/type_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/common_margin_16"
        android:layout_marginLeft="@dimen/common_margin_16"
        android:layout_marginTop="@dimen/common_margin_16"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp" >

            <LinearLayout
                android:id="@+id/lottery_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/win_tv_lotteryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="双色球"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/win_tv_lotteryQi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin_16"
                    android:text="454543期"
                    android:textColor="#848484"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/win_tv_lottery_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin_8"
                    android:text="2014-12-09"
                    android:textColor="#848484"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

           
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ly_lottery_windetail"
            android:layout_width="240dp"
            android:layout_height="42dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/win_items_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/log_lottery_ssq"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/lottery_ll_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lottery_ll_k3"
                android:layout_width="240dp"
                android:layout_height="42dp"
                android:background="@drawable/winlottery_k3"
                android:gravity="center"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/ll_k3top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/winlottery_k3"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/k3_img1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/k3_img2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/k3_img3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center" />
                    </LinearLayout>
                    
                    <TextView
                		android:id="@+id/text_hezhi"
                		android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:layout_gravity="center_vertical"
                		android:layout_marginLeft="5dp"
                		android:text="和值： "
                		android:textColor="@color/black"
                		android:visibility="gone" />
                    
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/win_lottery_tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无开奖信息"
            android:textColor="#848484"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>