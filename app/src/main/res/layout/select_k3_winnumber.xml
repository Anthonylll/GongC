<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/k3_layout_tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_left_width"
        android:layout_marginRight="@dimen/common_margin_right_width"
        android:layout_marginTop="15dp"
        android:background="@color/common_bg_pink"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1" >

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/hall_bg_grey" />

        <TextView
            android:id="@+id/tv_qihao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:padding="5dp"
            android:text="期次"
            android:textColor="@color/black"
            android:textSize="@dimen/common_big_text_size" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/hall_bg_grey" />

        <TextView
            android:id="@+id/tv_winnumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:padding="5dp"
            android:text="开奖号码"
            android:textColor="@color/black"
            android:textSize="@dimen/common_big_text_size" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/hall_bg_grey" />

        <TextView
            android:id="@+id/tv_hezhi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:padding="5dp"
            android:text="和值"
            android:textColor="@color/black"
            android:textSize="@dimen/common_big_text_size" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/hall_bg_grey" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:padding="5dp"
            android:text="形态"
            android:textColor="@color/black"
            android:textSize="@dimen/common_big_text_size" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/hall_bg_grey" />
    </LinearLayout>

    <ListView
        android:id="@+id/k3_win_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_left_width"
        android:layout_marginRight="@dimen/common_margin_right_width"
        android:divider="@color/hall_bg_grey2"
        android:dividerHeight="0.5dp"
        android:fadeScrollbars="true"
        android:fadingEdge="none"
        android:fastScrollEnabled="true"
        android:listSelector="#00000000"
        android:scrollingCache="false"
        android:visibility="gone" />
    
    <LinearLayout 
          android:id="@+id/img_line"
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         android:visibility="gone"
        >
         <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_margin_left_width"
        android:layout_marginRight="@dimen/common_margin_right_width"
        android:background="@color/hall_bg_grey"
        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/hall_bg_grey2" />
    </LinearLayout>

</LinearLayout>