<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bank_dialog"
    android:orientation="vertical" >

    <!-- 标题 -->

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="比分投注"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ll_team"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="0.9" >

        <TextView
            android:id="@+id/tv_mainTeam"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="新加坡"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_vs"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="VS"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_gusTeam"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="泰国"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_result"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="0.9" >

        <Button
            android:id="@+id/btn_win"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.3"
            android:background="@drawable/main_btn_ok_change"
            android:gravity="center"
            android:text="主胜"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_flat"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.3"
            android:background="@drawable/main_btn_ok_change"
            android:gravity="center"
            android:text="平"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tv_lose"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.3"
            android:background="@drawable/main_btn_ok_change"
            android:gravity="center"
            android:text="负"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <GridView
        android:id="@+id/gv_bifen"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:cacheColorHint="#00000000"
        android:columnWidth="90dp"
        android:fadingEdge="none"
        android:gravity="center"
        android:horizontalSpacing="2dp"
        android:numColumns="auto_fit"
        android:padding="2dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dp" />

    <LinearLayout
        android:id="@+id/btn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/btn_left"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.5"
            android:gravity="center" >

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/main_btn_ok_change"
                android:text="确定" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_right"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.5"
            android:gravity="center" >

            <Button
                android:id="@+id/btn_quit"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/main_btn_ok_change"
                android:text="取消" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>