<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hall_bg_grey"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/hall_bg_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hall_bg_grey"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/left_layout"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="9"
            android:background="@drawable/coupon_item_background" >

            <TextView
                android:id="@+id/coupon_money_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="2¥"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/coupon_money_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coupon_money_limit"
                android:layout_centerHorizontal="true"
                android:text="满10元可用"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16"
            android:background="@color/white" >

            <TextView
                android:id="@+id/daijinjuan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:background="#a89f9d"
                android:padding="3dp"
                android:text="代金券"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/coupon_limit_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/daijinjuan_text"
                android:text="满10减2"
                android:textColor="#a89f9d"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/daijinjuan_text"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:text="新注册用户"
                android:textColor="@color/gray2"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/coupon_limit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:text="2018.7.20 - 2018.8.20"
                android:textColor="@color/gray2"
                android:textSize="13dp" />
        </RelativeLayout>
    </LinearLayout>
    
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/hall_bg_grey"
        android:visibility="gone" />

</LinearLayout>