<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/standings_information_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="18-04-12"
        android:textColor="@color/black"
        android:textSize="12dp" />
    
    <TextView
        android:id="@+id/standings_information_org"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="亚冠"
        android:textColor="@color/black"
        android:textSize="12dp" />
    
    <TextView
        android:id="@+id/standings_host_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.1"
        android:singleLine="true"
        android:gravity="right"
        android:text="鹿岛鹿角"
        android:textColor="@color/black"
        android:textSize="12dp" />
    
    <TextView
        android:id="@+id/standings_team_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center_horizontal"
        android:text="1:0"
        android:textColor="@color/black"
        android:textSize="12dp" />
    
    <TextView
        android:id="@+id/standings_guest_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.1"
        android:singleLine="true"
        android:gravity="left"
        android:text="天津权健"
        android:textColor="@color/black"
        android:textSize="12dp" />
    
    <TextView
        android:id="@+id/standings_information_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="胜"
        android:textColor="@color/black"
        android:textSize="12dp" />

</LinearLayout>