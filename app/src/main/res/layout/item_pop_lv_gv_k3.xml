<?xml version="1.0" encoding="utf-8"?>
<!-- 账户信息 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ll_playType"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:background="@drawable/btn_playtype"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/gv_tv_playType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="普通投注"
            android:textColor="@color/black"
            android:textSize="@dimen/common_lage_text_size" />

        <TextView
            android:id="@+id/gv_tv_jiangjin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="奖金9-240元"
            android:textColor="@color/black"
            android:textSize="@dimen/common_lage_text_size" />

        <LinearLayout
            android:id="@+id/gv_ll_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/gv_tv_image1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/common_lage_text_size" />

            <TextView
                android:id="@+id/tv_jiahao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/common_small_text_size" />

            <TextView
                android:id="@+id/gv_tv_image2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/common_lage_text_size" />

            <TextView
                android:id="@+id/tv_jiahao2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/common_small_text_size" />

            <TextView
                android:id="@+id/gv_tv_image3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/common_lage_text_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>