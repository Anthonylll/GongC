<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/exchange_ten" />

        <TextView
            android:id="@+id/tv_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="消耗积分：100分"
            android:textColor="@color/grey"
            android:textSize="@dimen/common_small_text_size" />

        <Button
            android:id="@+id/btn_integral"
            android:layout_width="@dimen/btn_integral_width2"
            android:layout_height="@dimen/btn_integral_height2"
            android:background="@drawable/bet_btn_dan_unselected"
            android:gravity="center"
            android:text="立即兑换"
            android:textColor="@color/main_red"
            android:textSize="@dimen/common_small_text_size" />
    </LinearLayout>

</LinearLayout>